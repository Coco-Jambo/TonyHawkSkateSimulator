      </HBox>
   </center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
         <menus>
            <Menu mnemonicParsing="false" text="File">
               <items>
                  <MenuItem fx:id="database" mnemonicParsing="false" onAction="#showImportDatabaseWindow" text="Import planets database..." />
