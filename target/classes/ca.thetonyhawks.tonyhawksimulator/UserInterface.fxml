                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </children>
            </VBox>
            <VBox alignment="CENTER" spacing="20.0">
               <children>
                  <ComboBox fx:id="planeTypesComboBox" prefWidth="150.0" promptText="Paths" />
                  <ComboBox fx:id="planetComboBox" prefWidth="150.0" promptText="Planet" />
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </right>
