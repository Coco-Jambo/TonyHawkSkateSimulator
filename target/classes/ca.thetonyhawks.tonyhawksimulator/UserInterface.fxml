            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button fx:id="start" minHeight="25.0" minWidth="63.0" mnemonicParsing="false" onAction="#startEventHandler" stylesheets="@../CSS%20stylesheets/start_button.css" />
