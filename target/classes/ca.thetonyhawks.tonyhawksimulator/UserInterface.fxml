                  <BarChart fx:id="energyBarChart" barGap="5.0" minHeight="-Infinity" minWidth="150.0" prefHeight="725.0" prefWidth="200.0" title="Energy Graph Bar">
                     <xAxis>
                        <CategoryAxis side="BOTTOM" />
                     </xAxis>
                     <yAxis>
                        <NumberAxis autoRanging="false" nodeOrientation="LEFT_TO_RIGHT" prefHeight="660.0" prefWidth="11.0" side="LEFT" tickLabelGap="2.0" tickLength="2.0">
                           <effect>
                              <Blend />
                           </effect>
                           <tickLabelFont>
                              <Font size="10.0" />
                           </tickLabelFont>
                        </NumberAxis>
                     </yAxis>
                  </BarChart>
                  <Label fx:id="skaterPositionLabel" text="x = 0.0 m" />
                  <Label fx:id="skaterSpeedLabel" text="v = 0.0 m/s" />
                  <Label fx:id="skaterAccelerationLabel" text="a = 0.0 m/s^2" />
               </children>
            </VBox>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </Pane>
   </left>
   <right>
      <VBox alignment="TOP_CENTER" spacing="35.0" style="-fx-background-color: #19C7DC;" BorderPane.alignment="CENTER">
