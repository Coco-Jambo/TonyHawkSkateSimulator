            </HBox>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="236.0" spacing="10.0">
               <children>
                  <Label text="Speed: " />
                  <RadioButton fx:id="normalSpeedRadioButton" mnemonicParsing="false" onAction="#motionSpeedChangeEventHandler" selected="true" text="Normal">
                     <toggleGroup>
                        <ToggleGroup fx:id="speed" />
                     </toggleGroup></RadioButton>
                  <RadioButton fx:id="slowMotionRadioButton" mnemonicParsing="false" onAction="#motionSpeedChangeEventHandler" text="Slow motion" toggleGroup="$speed" />
               </children>
            </HBox>
         </children>
      </HBox>
   </bottom>
   <left>
      <Pane minWidth="150.0" style="-fx-background-color: #78D128;" BorderPane.alignment="TOP_CENTER">
         <children>
            <VBox alignment="TOP_CENTER" layoutX="-1.0" layoutY="1.0">
