                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="15.0">
                           <children>
                              <Label text="Initial height" />
                              <TextField fx:id="skaterInitialHeightField" onAction="#onSkaterInitialHeightEntered" prefWidth="50.0" />
                              <Label text="m" />
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </HBox>
                     </children>
                     <padding>
