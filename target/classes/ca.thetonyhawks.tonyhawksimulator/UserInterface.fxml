                        <Slider fx:id="planeDynamicCoefficientSlider" majorTickUnit="0.5" max="1.0" minorTickCount="4" prefHeight="38.0" prefWidth="225.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" stylesheets="@../CSS%20stylesheets/slider.css" />
                        <Label fx:id="planeDynamicCoefficientLabel" text="Î¼_k = 0" />
