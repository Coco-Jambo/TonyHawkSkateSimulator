                        <QuadCurve fx:id="parabolaPlaneCurve" controlX="-172.0" controlY="226.0" endX="476.0" endY="220.0" fill="#1f93ff00" layoutX="172.0" layoutY="470.0" startX="-172.0" startY="-326.0" stroke="#4a0000" strokeType="INSIDE" strokeWidth="14.0" visible="false" />
                     </children>
                  </Pane>
